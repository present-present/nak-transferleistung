{
  "name": "NAK Transferleistung Template",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "james-yu.latex-workshop",
        "eamodio.gitlens"
        // TODO: maybe there are interesing utility extensions like templaters or smth.
	    ],
      "settings": {
        "latex-workshop.linting.chktex.enabled": true,
        "latex-workshop.linting.lacheck.enabled": true,
        "latex-workshop.latex.autoClean.run":"never",
        "latex-workshop.latex.clean.subfolder.enabled": true,
        "latex-workshop.latex.outDir": "%DIR%/../build", // keeping workspace clean
        "latex-workshop.latex.recipe.default": "latexmk ðŸ”ƒ" // only latex-workshop.latex.tools tool that has "-outdir=%OUTDIR%" arg
      }
    }
  }
}
